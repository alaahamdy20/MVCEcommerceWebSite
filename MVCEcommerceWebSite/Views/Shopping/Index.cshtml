    <script>
    
    function DeleteItem(id){
        var res = confirm("Are You Sure you want delete this Product")
        if(res){
            $.ajax({
                type: "POST",
                url: `/remove/${id}`,
                success: function (response) {
					$("#con").html(response);
                    //alert(response);
                },
                failure: function (response) {
                    alert(response.responseText);
                },
                error: function (response) {
                    alert(response.responseText);
                }
            });
        }
    }
    </script>