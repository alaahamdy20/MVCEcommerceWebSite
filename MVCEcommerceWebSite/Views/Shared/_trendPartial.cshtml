
@model IEnumerable<Product>

@foreach (var item in Model.Take(4))
{

<div class="trend__item" style="display:grid;grid-template-columns: repeat(2, 1fr);
    width: 9rem;gap: 0.75rem; ">
                        <div class="" >
                            <img src="@item.ProductImages.FirstOrDefault().FilePath" style="max-width: 100%;    max-height: 100%;" alt="">
                        </div>
                        <div class="trend__item__text" style="overflow: revert">
                            <h6>@item.Name</h6>
                            <div class="rating">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </div>
                            <div class="product__price">$ @item.Price</div>
                        </div>
                    </div>
}